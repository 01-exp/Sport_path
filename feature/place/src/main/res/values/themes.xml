<resources xmlns:tools="http://schemas.android.com/tools">
     Base application theme.
    <style name="Theme.Sport_path" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/white</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/text_white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Sport_path.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black21</item>
        <item name="colorAccent">@color/backGr2FromYa</item>
        <item name="backgroundColor">@color/black21</item>

        <item name="colorControlNormal">@color/black21</item>
        <item name="colorControlActivated">@color/greyForHZ</item>
        <item name="android:windowBackground">@color/black21</item>
        <item name="android:textColor">@color/whiteTextColorFromYa</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.Sport_path.TimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/black21</item>
        <item name="colorAccent">@color/backGr2FromYa</item>
        <item name="backgroundColor">@color/greyForHZ</item>

        <item name="colorControlNormal">@color/black21</item>
        <item name="colorControlActivated">@color/greyForHZ</item>
        <item name="android:windowBackground">@color/greyForHZ</item>
        <item name="android:textColor">@color/whiteTextColorFromYa</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="clockFaceBackgroundColor">@color/black21</item>

    </style>


</resources>